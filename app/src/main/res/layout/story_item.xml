<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="130dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/story_title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/story_title_text_color"
                android:textSize="@dimen/text_size_medium"
                tools:text="The Mafia Heiress [On Hold] Jar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_views"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:alpha="0.4"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_view" />

                <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.4"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:textSize="@dimen/text_size_small"
                    tools:text="270" />
            </LinearLayout>

            <TextView
                android:id="@+id/release_date"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.4"
                android:maxLines="1"
                android:textSize="@dimen/text_size_small"
                tools:text="14-4-2018" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/placeholder_color"
            app:cardCornerRadius="3dp"
            app:cardPreventCornerOverlap="false">

            <ProgressBar
                android:layout_width="@dimen/poster_progressbar_size"
                android:layout_height="@dimen/poster_progressbar_size"
                android:layout_gravity="center"
                android:theme="@style/CircularProgress" />

            <ImageView
                android:id="@+id/story_poster"
                android:layout_width="@dimen/img_poster_width"
                android:layout_height="@dimen/img_poster_height"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>
    </FrameLayout>
</layout>